{% extends 'base.html.twig' %}

{% block title %}Hello PlatController!{% endblock %}

{% block body %}
    <div class="title">
        
        <h1>Plats</h1>
        
    </div>
    <main>
        <div class="list">
        {% for key, plat in plats %}
            <span class="foodHead">
                <!--icon-->
                <img class="foodIcon" src="{{ asset('' ~ plat.icon ~ '') }}"  >
                <!--name-->
                
                <h4>{{ plat.name }}</h4>
                <!--price-->
                <p>{{ plat.price }}$</p> 
              <!--image-->
                <img class="foodPic" src="{{ asset('' ~ plat.image ~ '') }}"  >
            </span>
            <!--description-->
            <p>{{ plat.description }}.
            </p>
            <!--ingredients-->
            <p class="content">{{ plat.content }}. </p>
            <br>
             {% endfor %}
             </div>
                <div class="nav">
            
           
            <section>
                <h4><a href="{{ path('app_carte')}}">La carte</a></h4>
