{% extends 'baseback.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
<div class = "backshow">
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ reservation.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ reservation.firstname }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ reservation.mail }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ reservation.phone }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ reservation.number }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reservation.date ? reservation.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Intel</th>
                <td>{{ reservation.intel }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ reservation.status }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_reservation_index') }}">Liste des réservations</a>

    <a class="btn btn-warning " href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Mis à jour des réservations</a>

    {{ include('backoffice/reservation/_delete_form.html.twig') }}
    </div>
{% endblock %}
