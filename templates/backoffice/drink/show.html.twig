{% extends 'baseback.html.twig' %}

{% block title %}Drink{% endblock %}

{% block body %}
<div class = "backshow">
    <h1>Boissons</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ drink.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ drink.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ drink.description }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ drink.icon }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ drink.image }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ drink.content }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ drink.price }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ drink.type }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_drink_index') }}">Index</a>

    <a class="btn btn-warning " href="{{ path('app_drink_edit', {'id': drink.id}) }}">Edition</a>

    {{ include('backoffice/drink/_delete_form.html.twig') }}
    </div>
{% endblock %}
