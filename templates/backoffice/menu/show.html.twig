{% extends 'baseback.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
<div class = "backshow">
    <h1>Menu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ menu.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ menu.content }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ menu.price }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_menu_index') }}">Index</a>

    <a class="btn btn-warning " href="{{ path('app_menu_edit', {'id': menu.id}) }}">Edition</a>

    {{ include('backoffice/menu/_delete_form.html.twig') }}
    </div>
{% endblock %}
