{% extends 'baseback.html.twig' %}

{% block title %}Note index{% endblock %}

{% block body %}
<div class="backshow">
    <h1>Liste des notes de service</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Place</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.id }}</td>
                <td>{{ note.place }}</td>
                <td>{{ note.content }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_note_show', {'id': note.id}) }}">Détail</a>
                    <a class="btn btn-warning" href="{{ path('app_note_edit', {'id': note.id}) }}">Modiffication de la note de service</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_note_new') }}">Créer une nouvelle note de service</a>
    </div>
{% endblock %}
