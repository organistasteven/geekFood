{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class = "backshow">
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_user_index') }}">Retour à la liste</a>

    <a class="btn btn-warning " href="{{ path('app_user_edit', {'id': user.id}) }}">Mis à jour de l'utilisateur</a>

    {{ include('backoffice/user/_delete_form.html.twig') }}
{% endblock %}
