{% extends 'baseback.html.twig' %}

{% block title %}Plat{% endblock %}

{% block body %}
<div class = "backshow">
    <h1>Plat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plat.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ plat.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ plat.description }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ plat.icon }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ plat.image }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ plat.content }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ plat.price }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ plat.type }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info"  href="{{ path('app_plat_index') }}">Index</a>

    <a class="btn btn-warning " href="{{ path('app_plat_edit', {'id': plat.id}) }}">Edition</a>

    {{ include('backoffice/plat/_delete_form.html.twig') }}
    </div>
{% endblock %}
